<?xml version="1.0" encoding="utf-8"?>
<project>
	<!-- NMML reference: https://gist.github.com/1763850 -->
	
	<!-- metadata, make sure 'package' is at least 3 segments (ie. com.mycompany.myproject) -->
	<meta title="Lexicon" package="com.forkandpie.Lexicon" version="1.0.0" company="" />
	
	<!-- output -->
	<app main="Main" file="Lexicon" path="bin" preloader="views.Preloader" />
	
	<window background="#000000" fps="60" />
	<window width="960" height="540" unless="mobile" />
	<window width="540" height="960" if="mobile" />
	<window orientation="landscape" vsync="false" antialiasing="0" if="cpp" />
	
	<!-- classpath, haxe libs -->
	<source path="src" />
	<haxelib name="openfl" />
	<haxelib name="actuate" />
	<haxelib name="stablexui" />
	<haxelib name="munit" />
	<haxelib name="polygonal-core" />
	<haxelib name="hxcpp" />
	
	<!-- assets -->
	<icon path="assets/openfl.svg" />
	<assets path="assets/img" rename="img" />
	<assets path="assets/font" rename="font" type="font" />
	<assets path="assets/data" rename="data"/>
	
	<!-- optimize output
	<haxeflag name="-dce full" /> -->
	
</project>